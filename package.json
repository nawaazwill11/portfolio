{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Nawaaz Kortiwala's portfolio app",
  "private": true,
  "scripts": {
    "start": "babel src -d lib --extensions \".ts,.tsx\"",
    "dev:wds": "cross-env NODE_ENV=development WDS_PORT=7000 webpack serve",
    "dev:run-all": "concurrently \"yarn dev:server\" \"yarn dev:wds\" ",
    "dev:server": "cross-env NODE_ENV=development nodemon --exec babel-node --config-file ./babel.config.json --extensions .ts,.tsx,.js src/server",
    "build": "rimraf build && babel --extensions .ts,.tsx,.js ./src --ignore ./src/client -d ./build && cross-env NODE_ENV=production webpack --progress",
    "prod:start": "cross-env NODE_ENV=production pm2 start build/server && pm2 logs",
    "prod:stop": "pm2 delete server",
    "prod:restart": "yarn prod:stop && yarn prod:start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nawaazwill11/portfolio.git"
  },
  "keywords": [
    "porfolio",
    "resume",
    "cv"
  ],
  "author": "Nawaaz Kortiwala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nawaazwill11/portfolio/issues"
  },
  "homepage": "https://github.com/nawaazwill11/portfolio#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "5.0.0-alpha.10",
    "mini-css-extract-plugin": "^1.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
